<web-service>
    <info>
        <name>{{"Web Service" | reverse_string}}</name>
        <type>http</type>
        <port>8080</port>
        <enabled>True</enabled>
    </info>
    <endpoints>
        <endpoint>
            <name>REST API</name>
            <path>/api/v1</path>
            <methods>
                <method>GET</method>
                <method>POST</method>
                <method>PUT</method>
            </methods>
            <auth-required>True</auth-required>
        </endpoint>
    </endpoints>
</web-service>